<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MvcForumCore.Web</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/view-resources/bundles/layout-libs.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/view-resources/bundles/layout-libs.min.css" />
    </environment>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-page="/Index" class="navbar-brand">MvcForumCore.Web</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-page="/Index">Home</a></li>
                    <li><a asp-page="/About">About</a></li>
                    <li><a asp-page="/Contact">Contact</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2017 - MvcForumCore.Web</p>
        </footer>
    </div>

    <environment include="Development">
        <script src="~/view-resources/bundles/layout-libs.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/view-resources/bundles/layout-libs.min.js"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
